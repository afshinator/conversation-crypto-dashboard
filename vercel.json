{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/cryptochat", "destination": "/index.html" },
    { "source": "/cryptochat/data", "destination": "/index.html" }
  ],
  "functions": {
    "api/fetch.ts": { "maxDuration": 60 },
    "api/chat.ts": { "maxDuration": 30 }
  }
}
